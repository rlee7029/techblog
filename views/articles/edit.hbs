<div class="container">

  <h5 class="text-center text-light bg-secondary mb-3 mt-3">Edit Article</h5>
 
  <form action="/articles/{{article.dataValues.id}}/edit" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" value="{{article.dataValues.title}}">
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea class="form-control" id="content" name="content" rows="5">{{article.dataValues.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Update Article</button>
  </form>

</div>
